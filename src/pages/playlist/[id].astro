---
import type { Playlist, Song } from "@/lib/data";
import { playlists, songs } from "@/lib/data";
import Layout from "@/layouts/Layout.astro";
interface Props {
    playlists : Playlist;
    playlist : Playlist;
    playListSongs : Song;
}

const { id } = Astro.params
const playlist = playlists.find((playlist) => playlist.id === id)
const playListSongs = songs.filter((song) => Number(song.albumId) === Number(playlist?.id))
---

<Layout title="Spotify Clone">
    <div class="relative bg-zinc-900 z-10 px-6 pt-10"
    transition:name=`playlist ${id} box`>
    <header class="flex flex-row gap-5 text-white">
        <picture class="h-56 w-56 flex-none">
            <img src={playlist?.cover}
            alt="Title"
            class="object-cover rounded-md"
            transition:name=`playlist ${id} image`
            >
        </picture>
        <section class="flex flex-col pl-5">
            <item class="flex flex-col gap-5">
                <h2>Playlist</h2>
                <h1 class="text-7xl font-bold mb-4" transition:name=`playlist ${id} title`>
                    {playlist?.title}
                    
                </h1>
                
            </item>
            <item class="pt-2">
                <div transition:name=`playlist ${id} artists`>
                    <span class=" text-gray-400">
                        {playlist?.artists.join(', ')}
                    </span>
                </div>
                <p class="mt-1">
                    <span class="text-white">10 songs</span>, 2 hr 12 min

                </p>
            </item>
        </section>
    </header>
    <div class="absolute inset-0 bg-gradient-to-t from-zinc-900 via-zinc-900/30 -z-[1]" />
</div>

</Layout>

